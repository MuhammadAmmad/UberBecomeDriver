            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="1dp"
            android:id="@+id/card5">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
